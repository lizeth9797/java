import java.util.*;
import java.io.*;

class Solution{
    public static void main(String []argh){
        Scanner in = new Scanner(System.in);
        System.out.print("Q:");
        int t=in.nextInt();
        
        for(int i=0;i<t;i++){
            System.out.print("a:");//2
            int a = in.nextInt();
            System.out.print("b:");//1
            int b = in.nextInt();
            System.out.print("n:");//
            int n = in.nextInt();// 3
            
            //for con la formula
            //int cont=0;
            int resultado=0;
            int potencias=0;
            for(int j=0;j<n;j++) { 
            	System.out.println("primer for j: "+j);
            	for(int x=0;x<=j;x++) { 
                	System.out.println("segundo for x: "+x);
                	resultado=0;
                	for (int z=0; z<=x ; z++) { //de hacerlo 2 vece
               		     System.out.println("tercer for z: "+z);
                         potencias=0;
                		 potencias=(int) ((Math.pow(2, z))*b); 
                		 resultado+=potencias;
                		 //System.out.println("potencia: "+ potencias);

                		 }
                	resultado+=a; 
                	System.out.println("resulado parentesis: "+(a+potencias));
                	//System.out.println("r en el 2do for:"+resultado);
            	}
            }
        }
        in.close();
    }   
}