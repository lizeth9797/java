import java.util.*;
import java.io.*;

class Solution{
    public static void main(String []argh){
        Scanner in = new Scanner(System.in);
        System.out.print("Q:");
        int t=in.nextInt();
        
        for(int i=0;i<t;i++){
            System.out.print("a:");//2
            int a = in.nextInt();
            System.out.print("b:");//1
            int b = in.nextInt();
            System.out.print("n:");//
            int n = in.nextInt();// 3
            
            //for con la formula
            //int cont=0;
            int resultado=0;
            int potencias=0;
            for(int j=0;j<n;j++) { //j=1, j<3?
            	for(int x=0;x<=j;x++) { //x=0, x<=1? si
                	//int resultado=(int) (a+(Math.pow(2, j))*b);
            		//cont=0;
                	for (int z=0; z<=j ; z++) {  //z=1, 1<=1
                         potencias=0;
                		 potencias=(int) ((Math.pow(2, j))*b);  //r=2^0*b  , 2^1*b
                		//cont ++;   
                		 resultado+=potencias;
                		 //System.out.println("r 3er for: "+ resultado);
                		 }
                	resultado+=a; // 3
                	System.out.println("r en el 2do for:"+resultado);
            	}
            }
            
            
        }
        in.close();
    }   
}