
public class Main {

	public static void main(String[] args) {
		Triangulo bermudas= new Triangulo("Bermudas",20,10,15);
		Triangulo t= new Triangulo("TrianguloT",10,8.5,17);

		imprimirCalculo(bermudas);
		imprimirCalculo(t);
		
		Cuadrado bob=new Cuadrado("Bob",5);
		//imprimirCalculo(Cuadrado); esto no sería lo optimo xq tendríamos que crear múltiples métodos apra cada figura. Por lo tanto crearemos la interfaz "FigurasGeometricas"

	}
	
	public static void imprimirCalculo(Triangulo t) { //sin uso de interfaz
		System.out.println(t.toString());
		System.out.println("El área de ["+t.getNombre()+
				"] es: "+t.calcularArea());
		System.out.println("El perímetro de ["+t.getNombre()+
				"] es: "+t.calcularPerimetro());		System.out.println("------------------");
	}//imprimirCalculo
	
	public static void imprimirCalculo(FigurasGeometricas t) { //usando interfaz
		System.out.println(t.toString());
		System.out.println("------------------");
		System.out.println("El área de ["+t.getNombre()+
				"] es: "+t.calcularArea());
		System.out.println("El perímetro de ["+t.getNombre()+
				"] es: "+t.calcularPerimetro());		System.out.println("------------------");
		System.out.println("\n\n");
	}//imprimirCalculo
	
	

}
